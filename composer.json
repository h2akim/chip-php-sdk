{
    "name": "hakimrazalan/chip-php-sdk",
    "description": "PHP framework agnostic to work with CHIP Asia API",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Chip\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chip\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Hakim Razalan",
            "email": "hakim.razalan@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "json-mapper/json-mapper": "^2.22",
        
        "symfony/http-client": "^7.2",
        
        "spatie/ray": "^1.41",
        "laravie/codex": "^5.3",
        "laravie/codex-filter": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "php-http/guzzle7-adapter": "^1.1",
        "phpunit/phpunit": "^10.5"
    }
}
